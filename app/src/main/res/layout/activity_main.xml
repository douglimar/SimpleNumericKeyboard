<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.com.ddmsoftware.simplenumerickeyboard.MainActivity"
    android:background="@android:color/background_light"
    android:gravity="center_vertical">

    <TextView
        android:text="Selecione abaixo qual tipo de Jogo deseja iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnCountdown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/contagem_regressiva_n_nvoc_tem_60_seg_para_resolver_o_maior_n_mero_de_quest_es"
        android:drawableLeft="@drawable/countdown2"
        android:textAllCaps="false"
        android:background="@android:color/holo_orange_light"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />


    <Button
        android:id="@+id/btnFreeTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEMPO LIVRE\n\nSem controle de tempo. Bom para estudar enquanto acumula estrelas"
        android:drawableLeft="@drawable/freetime2"
        android:textAllCaps="false"
        android:background="@color/cast_intro_overlay_button_background_color"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewAdMob"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:background="@android:drawable/editbox_dropdown_light_frame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:id="@+id/linearLayoutAdMob">
            <!-- A CardView that contains a TextView and a AdView-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advertisement"
                android:textStyle="bold"
                android:layout_margin="2dp"/>

            <com.google.android.gms.ads.AdView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_TESTE"
                android:id="@+id/adViewResult"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
